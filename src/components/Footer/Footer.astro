---
const today = new Date();
import youtubeSvg from "./icons/youtube.svg";
import linkedinSvg from "./icons/linkedin.svg";
import Image from "astro/components/Image.astro";
import arenaLogo from "./icons/arena-logo-white.png";

interface Props {
  useTopOffset?: boolean;
}

const { useTopOffset = true } = Astro.props;
---

<footer class={useTopOffset ? "footer-with-offset" : "footer-no-offset"}>
  {today.getFullYear()} · Óscar A. Montiel · Proudly existing.
  <section class="section-icons">
    <a
      href="https://www.are.na/tilde-colon-pipe-degrees-degrees-bullet-period-pipe-colon-tilde/channels"
      target="_blank"
    >
      <Image
        loading="lazy"
        class="icon-image"
        alt="Óscar A. Montiel's Are.na profile."
        src={arenaLogo}
      />
    </a>

    <a href="https://www.linkedin.com/in/oscaramontiel/" target="_blank">
      <Image
        loading="lazy"
        alt="Óscar A. Montiel's LinkedIn profile."
        src={linkedinSvg}
      />
    </a>
    <a
      href="https://www.youtube.com/channel/UCGe1qc0nF0uNypETYDQmMMQ"
      target="_blank"
    >
      <Image
        loading="lazy"
        alt="Óscar A. Montiel's YouTube channel."
        src={youtubeSvg}
      />
    </a>
  </section>
</footer>
<style>
  .section-icons {
    display: flex;
    justify-content: space-around;
    width: 200px;
  }
  .section-icons img {
    max-height: 20px;
    width: auto;
  }
  .icon-image {
    max-height: 24px;
  }

  /* Base footer styles */
  footer {
    min-height: 10vh;
    font-family: "Montserrat", serif;
    color: white;
    font-size: 0.8rem;
    background: rgb(165, 42, 42);
    position: relative;
    display: flex;
    justify-content: space-around;
    align-items: center;
    width: 100%;
  }

  /* Footer with top offset (default behavior) */
  .footer-with-offset {
    top: 100vh;
  }

  /* Footer without top offset */
  .footer-no-offset {
    top: 0;
  }

  /* Mobile responsive styles */
  @media (max-width: 768px) {
    footer {
      flex-direction: column;
      padding: 20px;
      gap: 15px;
      text-align: center;
      min-height: auto;
    }

    .left-container {
      width: 100%;
    }
    .title {
      width: 100%;
    }

    .section-icons {
      width: 200px;
      justify-content: space-between;
    }

    .section-icons img {
      max-height: 20px;
    }

    .icon-image {
      max-height: 20px;
    }
  }

  /* Small mobile devices */
  @media (max-width: 480px) {
    footer {
      font-size: 0.7rem;
      padding: 15px;
      max-width: 100%;
    }

    .section-icons {
      width: 150px;
    }

    .section-icons img {
      max-height: 18px;
    }

    .icon-image {
      max-height: 18px;
    }
  }
</style>
