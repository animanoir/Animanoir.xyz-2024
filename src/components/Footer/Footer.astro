---
const today = new Date();
import youtubeSvg from "./icons/youtube.svg";
import linkedinSvg from "./icons/linkedin.svg";
import arenaLogo from "./icons/arena-logo-white.png";
import igSvg from "./icons/ig.svg";
import steamSvg from "./icons/steam.svg";

interface Props {
  useTopOffset?: boolean;
}

const { useTopOffset = true } = Astro.props;
---

<footer class={useTopOffset ? "footer-with-offset" : "footer-no-offset"}>
  <div>
    {today.getFullYear()} · Óscar A. Montiel——<span style="font-style:italic"
      >Proudly existing.</span
    >
  </div>
  <style>
    .section-icons {
      display: flex;
      justify-content: space-around;
      width: 300px;
    }
    .section-icons img {
      max-height: 20px;
      width: auto;
    }
    .icon-image {
      max-height: 20px;
    }

    /* Base footer styles */
    footer {
      flex-direction: column-reverse;
      height: 100vh;
      width: 99vw;
      font-family: "Montserrat", serif;
      color: white;
      font-size: 0.8rem;
      background: rgb(165, 42, 42);
      /* position: fixed; */
      /* bottom: 0; */
      /* left: 0; */
      display: flex;
      justify-content: center;
      align-items: center;
      gap: 2rem;
      font-size: 3rem;
    }

    /* Footer with top offset (default behavior) */
    .footer-with-offset {
      /* No longer needed - footer is now full viewport */
    }

    /* Footer without top offset */
    .footer-no-offset {
      /* No longer needed - footer is now full viewport */
    }

    /* Mobile responsive styles */
    @media (max-width: 768px) {
      footer {
        flex-direction: column;
        padding: 20px;
        gap: 15px;
        text-align: center;
        height: 100vh;
        width: 100vw;
        position: fixed;
        bottom: 0;
        left: 0;
        margin: 0;
        box-sizing: border-box;
        justify-content: center;
        align-items: center;
      }

      .left-container {
        width: 100%;
      }
      .title {
        width: 100%;
      }

      .section-icons {
        width: 300px;
        justify-content: space-between;
      }

      .section-icons img {
        max-height: 20px;
      }

      .icon-image {
        max-height: 20px;
      }
    }

    /* Small mobile devices */
    @media (max-width: 480px) {
      footer {
        font-size: 0.7rem;
        padding: 15px;
        height: 100vh;
        width: 100vw;
        position: fixed;
        bottom: 0;
        left: 0;
        justify-content: center;
        align-items: center;
        box-sizing: border-box;
      }

      .section-icons {
        width: 250px;
      }

      .section-icons img {
        max-height: 18px;
      }

      .icon-image {
        max-height: 18px;
      }
    }
  </style>
</footer>
