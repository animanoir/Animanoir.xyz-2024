---
const today = new Date();
import youtubeSvg from "./icons/youtube.svg";
import linkedinSvg from "./icons/linkedin.svg";
import arenaLogo from "./icons/arena-logo-white.png";
import igSvg from "./icons/ig.svg";
import steamSvg from "./icons/steam.svg";

interface Props {
  useTopOffset?: boolean;
}

const { useTopOffset = true } = Astro.props;
---

<footer class={useTopOffset ? "footer-with-offset" : "footer-no-offset"}>
  <div>
    {today.getFullYear()} · Óscar A. Montiel——<span style="font-style:italic"
      >Proudly existing.</span
    >
  </div>
  <style>
    .section-icons {
      display: flex;
      justify-content: space-around;
      width: 300px;
    }
    .section-icons img {
      max-height: 20px;
      width: auto;
    }
    .icon-image {
      max-height: 20px;
    }

    /* Base footer styles */
    footer {
      font-family: "Montserrat", serif;
      color: white;
      font-size: 0.8rem;
      background: rgb(165, 42, 42);
      display: flex;
      justify-content: center;
      align-items: center;
      padding: 2rem;
      margin-top: auto;
      width: 100%;
      box-sizing: border-box;
    }

    /* Footer with top offset (default behavior) */
    .footer-with-offset {
      margin-top: 4rem;
    }

    /* Footer without top offset */
    .footer-no-offset {
      margin-top: 0;
    }

    /* Mobile responsive styles */
    @media (max-width: 768px) {
      footer {
        flex-direction: column;
        padding: 1.5rem;
        text-align: center;
        font-size: 0.7rem;
      }

      .section-icons {
        width: 250px;
        justify-content: space-between;
      }

      .section-icons img {
        max-height: 18px;
      }

      .icon-image {
        max-height: 18px;
      }
    }

    /* Small mobile devices */
    @media (max-width: 480px) {
      footer {
        font-size: 0.6rem;
        padding: 1rem;
      }

      .section-icons {
        width: 200px;
      }

      .section-icons img {
        max-height: 16px;
      }

      .icon-image {
        max-height: 16px;
      }
    }
  </style>
</footer>
