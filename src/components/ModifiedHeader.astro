---
import { SITE_TITLE } from "@/consts";
import LastFm from "@/components/LastFm.jsx";
import MutatingSubheader from "@/components/MutatingSubheader.jsx";
import Navbar from "@/components/Navbar.astro";

const { goWild = false, sortSpeed = 0 } = Astro.props;
---

<header>
  <div>
    <a href="/">
      <h1 id="headerTitle">
        {SITE_TITLE} | <span id="headerSubtitle"
          ><MutatingSubheader client:load /></span
        >
      </h1>
    </a>
    <LastFm client:load />
  </div>
  <Navbar />
</header>

<style>
  header {
    position: relative;
    z-index: 1000;
    display: flex;
    position: fixed;
    justify-content: space-between;
    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.475);
    width: 95%;
    margin-top: 1rem;
    left: 50%;
    transform: translateX(-50%);
  }
  header a {
    text-decoration: none;
  }
  #headerTitle {
    font-size: 1rem;
    font-weight: 700;
    margin: 0;
    padding: 0;
    line-height: 1.2;
    font-family: "Montserrat", sans-serif;
    user-select: none;
  }

  #headerSubtitle {
    font-weight: 400;
  }

  h1 {
    margin: 0.5em 0;
    color: #fdfefe;
    transition: color 0.25s ease-out;
    cursor: pointer;
  }
  h1:hover {
    color: #ee5858;
  }

  @media (max-width: 500px) {
    header {
      flex-direction: column;
      align-items: center;
    }
    #headerTitle {
      font-size: 1rem;
    }
    #headerSubtitle {
      font-size: 1rem;
    }
    nav {
      font-size: 0.75em;
    }
  }
</style>
