---
import { YouTubeGrid } from "@/components/YouTubeGrid/YoutubeGrid.jsx";
import BaseHead from "@/components/BaseHead.astro";
import Header from "@/components/Header.astro";
import { Picture } from "astro:assets";
import MagicHeading from "@/components/MagicHeading.jsx";
import visualsCover from "@/images/works/visuals/visuals-main-cover.jpg";
import heroImage from "@/images/works/visuals/visuals-cover.jpg";
import img1 from "@/images/works/visuals/visuals-1.jpg";
import img2 from "@/images/works/visuals/visuals-6.png";
import img3 from "@/images/works/visuals/visuals-3.png";
import img4 from "@/images/works/visuals/visuals-4.png";
import img5 from "@/images/works/visuals/visuals-5.jpg";
import img7 from "@/images/works/visuals/visuals-7.jpg";
import img8 from "@/images/works/visuals/visuals-8.jpg";
import img9 from "@/images/works/visuals/visuals-9.jpg";
import RandomVideo from "@/components/RandomVideo/RandomVideo.jsx";
import Footer from "@/components/Footer/Footer.astro";
import * as motion from "motion/react-client"; 
// import { YouTube } from "astro-embed";
---

<html lang="en">
  <head>
    <BaseHead
      title={"3D Art by Óscar A. Montiel"}
      description={"Animations & A/Visual art."}
      image={visualsCover.src}
    />
  </head>
  <body>
    <Header />
    <RandomVideo client:load />
    <YouTubeGrid client:load  count={20} />
    <main class="articleContainer">
      <motion.div
      initial={{ opacity: 0 }} animate={{ opacity: 1, transition: { duration: 1 } }}
      client:visible
      >
      <MagicHeading client:visible />
    </motion.div>

    {/*<YouTube id="https://www.youtube.com/watch?v=hk-sb9owrtc" />
    <YouTube id="https://www.youtube.com/watch?v=3nsmnV6FhdY" />
    <YouTube id="https://www.youtube.com/watch?v=EiEBZUccdR8" />
    <YouTube id="https://www.youtube.com/watch?v=52EWlBICt0g" />
    <YouTube id="https://www.youtube.com/watch?v=bAPAXWBrNJI" />
    <YouTube id="https://www.youtube.com/watch?v=rqg9pFlV-0s" />
    <YouTube id="https://www.youtube.com/watch?v=jpcgtRk59hI" />
    <YouTube id="https://www.youtube.com/watch?v=_elpdaOBOis" />*/}
      <div class="images-container">
        {[heroImage, img7, img1, img8, img9, img3, img2, img4, img5].map((image, index) => (
          <a href={image.src} target="_blank" class="image-grid-item" aria-label={`View full size image ${index + 1}`}>
            <Picture
              src={image}
              alt={"3D Art by Óscar A. Montiel"}
              class="heroImage"
              formats={["webp"]}
              decoding="async"
              loading="eager"
              quality={90}
            />
          </a>
        ))}
      </div>
      <a
        class="top-link"
        href="#"
        onclick="window.scrollTo({top: 0, behavior: 'smooth'}); return false;"
      >
        <h3>Go to the top.</h3>
      </a>
    </main>
    <Footer useTopOffset={false} />
    <script>
      document.addEventListener('DOMContentLoaded', () => {
        const images = document.querySelectorAll('.heroImage');
        
        images.forEach(image => {
          if (image.complete) {
            image.classList.add('loaded');
          } else {
            image.addEventListener('load', () => {
              image.classList.add('loaded');
            });
          }
        });
      });
    </script>
  </body>
  <style>
    .hero-video {
      width: 100%;
      100vh;
    }
    .top-link {
      display: flex;
      justify-content: center;
      cursor: pointer;
      opacity: 0.6;
      color: #666;
      transition: all 0.3s ease;
      width: fit-content;
      margin: 0 auto;
      margin-top: 5rem;
    }
    .top-link h3 {
      font-size: 1rem;
    }

    .top-link:hover {
      opacity: 1;
      color: #000;
    }
    .images-container {
      padding-top: 32vh;
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
      grid-gap: 1rem;
    }

    .image-grid-item {
      display: block;
      overflow: hidden;
      position: relative;
      transition: transform 0.3s ease;
    }

    .image-grid-item:hover {
      transform: scale(1.02);
    }

    .heroImage {
      height: 100%;
      width: 100%;
      object-fit: cover;
      margin: 0 !important;
      filter: brightness(1);
      opacity: 0;
      transition: opacity 0.5s ease-in-out, transform 0.3s ease;
    }

    .heroImage.loaded {
      opacity: 1;
    }

    /* Add responsive grid adjustments */
    @media (max-width: 768px) {
      .images-container {
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        grid-gap: 0.5rem;
      }
    }

    @media (max-width: 480px) {
      .images-container {
        grid-template-columns: 1fr;
      }
    }

    /* QHD - 2560x1440 */
    @media (min-width: 2560px) {
      .images-container {
        padding-top: 32vh;
      }
      .articleContainer {
        width: 70%;
        max-width: 2000px;
        padding-top: 5vh;
      }
    }

    /* Large Desktop */
    @media (min-width: 1200px) and (max-width: 2559px) {
      .images-container {
        padding-top: 28vh;
      }
      .articleContainer {
        width: 75%;
      }
    }

    /* Desktop */
    @media (max-width: 1199px) and (min-width: 992px) {
      .images-container {
        padding-top: 25vh;
      }
    }

    /* Tablet */
    @media (max-width: 991px) and (min-width: 768px) {
      .images-container {
        padding-top: 22vh;
      }
    }

    /* Mobile Large */
    @media (max-width: 767px) and (min-width: 576px) {
      .images-container {
        padding-top: 18vh;
      }
      .articleContainer {
        width: 90%;
      }
    }

    /* Mobile Small */
    @media (max-width: 575px) {
      .images-container {
        padding-top: 15vh;
      }
      .articleContainer {
        width: 95%;
        padding-top: 15vh;
      }
    }

    .articleContainer {
      padding-top: 25vh;
      padding-bottom: 20vh;
      margin: 0 auto;
      position: relative;
      width: 65%;
    }
    body {
      margin: 0;
    }
    @media (max-width: 768px) {
      .articleContainer {
        width: 100%;
      }
      .heroImage {
        height: auto;
      }
      #text {
        font-size: 2rem !important;
      }
    }
  </style>
</html>
