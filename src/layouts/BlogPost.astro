---
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import ModifiedHeader from "../components/ModifiedHeader.astro";
import Footer from "@/components/Footer/Footer.astro";
import Picture from "astro/components/Picture.astro";
import RelatedArticles from "@/components/RelatedArticles.astro";

type Props = CollectionEntry<"blog">["data"] & {
  slug: string;
};

const { title, summary, pubDate, heroImage, tags, slug } = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead
      title={`${title} by Óscar A. Montiel | Interactive Media Developer`}
      description={summary ?? "Blog post by Óscar A. Montiel."}
      image={heroImage?.src}
    />
  </head>
  <body>
    <ModifiedHeader />
    {
      heroImage && (
        <Picture
          class="heroimage"
          src={heroImage}
          alt={title}
          quality={50}
          loading="eager"
          fetchpriority="high"
          decoding="sync"
        />
      )
    }
    <div class="articleBody">
      <div class="left-container">
        <div class="title-container">
          <h1 class="title">{title}</h1>
          <h2 class="summary">{summary}</h2>
          <time class="postDate">
            {new Date(pubDate).toLocaleDateString()}
          </time>
        </div>
        <div class="related-container">
          <RelatedArticles
            currentTags={tags}
            currentUrl={`/blog/${slug}/`}
            currentSlug={slug}
            maxResults={3}
          />
        </div>
      </div>
      <article class="articleContainer">
        <slot />
      </article>
    </div>

    <Footer useTopOffset={false} />
    <style>
      /* ==========================================================================
         FONT IMPORTS
         External font imports for typography
         ========================================================================== */
      @import url("https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300..700&display=swap");
      @import url("https://fonts.googleapis.com/css2?family=EB+Garamond:ital,wght@0,400..800;1,400..800&family=Space+Grotesk:wght@300..700&display=swap");

      /* ==========================================================================
         ARTICLE CONTAINER
         Main container for blog post content
         ========================================================================== */
      .heroimage {
        position: fixed;
        top: 0;
        left: 0;
        width: 100vw;
        height: 100vh;
        object-fit: cover;
        filter: blur(8px) brightness(0.4);
      }
      .articleContainer {
        margin: 0 auto;
        position: relative;
        max-width: 45%;
        font-size: 1.3rem;
      }
      .left-container {
        width: 30%;
        z-index: 1;
      }
      /* ==========================================================================
         ARTICLE BODY
         Content wrapper with base typography styles
         ========================================================================== */
      .title-container {
        /* width: 70%; */
        /* padding-right: 5rem; */
        z-index: 10;
      }
      .articleBody {
        margin: 0 auto;
        width: 80%;
        display: flex;
        padding-top: 5rem;
        padding-bottom: 5rem;
        color: #fdfefe;
        font-family: "EB Garamond", serif;
      }

      .articleBody p {
        margin-bottom: 1.1rem;
        line-height: 1.6;
      }

      /* ==========================================================================
         TYPOGRAPHY COMPONENTS
         Individual text elements with specific styling
         ========================================================================== */

      /* Main blog post title */
      .title {
        margin: 0;
        font-size: 4rem;
        font-family: "Space Grotesk", sans-serif;
        text-align: start;
      }

      /* Blog post summary/subtitle */
      .summary {
        font-size: 1rem;
        color: #fdfefe7f;
        margin: 1rem 0;
        font-weight: normal;
        font-family: "Space Grotesk", sans-serif;
        text-align: start;
      }

      /* Publication date display */
      .postDate {
        font-size: 0.5rem;
        font-family: "Space Grotesk", sans-serif;
        margin: 0 0 0 auto;
        color: #999;
        padding: 0;
      }

      /* Tools/metadata display (unused but kept for future use) */
      /* .tools {
        display: block;
        text-align: center;
        font-size: 0.7rem;
        font-family: "EB Garamond", serif;
        color: #fdfefe7f;
        padding-bottom: 2rem;
        font-style: italic;
      } */

      /* ==========================================================================
         RELATED ARTICLES CONTAINER
         Styling for the related articles section
         ========================================================================== */
      .related-container {
        width: 100%;
        margin: 0 auto;
      }

      /* ==========================================================================
         CONTENT ELEMENTS
         Styling for various content elements within articles
         ========================================================================== */

      /* Horizontal rule separator */
      hr {
        border: none;
        border-top: 1px solid #ddd;
        margin: 1rem 0;
      }

      /* ==========================================================================
         RESPONSIVE DESIGN
         Media queries for different screen sizes
         ========================================================================== */

      /* Large desktop screens */
      @media (min-width: 1921px) {
        .title {
          font-size: 4rem;
          line-height: 1;
        }
        .summary {
          font-size: 1.2rem;
        }
        .postDate {
          font-size: 0.8rem;
        }
        .articleContainer {
          font-size: 1.4rem;
        }
        .articleBody {
          padding-top: 8rem;
        }
      }

      /* Desktop screens */
      @media (min-width: 1361px) and (max-width: 1920px) {
        .title {
          line-height: 1.2;
          font-size: 3.5rem;
          line-height: 1;
        }
        .summary {
          font-size: 1.1rem;
        }
        .postDate {
          font-size: 0.8rem;
        }
        .left-container {
          width: 35%;
        }
        .articleContainer {
          font-size: 1.3rem;
          max-width: 50%;
        }
        .articleBody {
          padding-top: 6rem;
        }
      }

      /* Tablet and small desktop */
      @media (min-width: 769px) and (max-width: 1360px) {
        .title {
          font-size: 2.8rem;
          line-height: 1.1;
        }

        .left-container {
          width: 100%;
        }
        .summary {
          font-size: 1.1rem;
        }
        .postDate {
          font-size: 0.8rem;
        }
        .articleContainer {
          font-size: 1.2rem;
          max-width: 55%;
        }
        .articleBody {
          padding-top: 7rem;
        }
        .title-container {
          width: 90%;
        }
      }

      /* Mobile devices */
      @media (max-width: 768px) {
        .title-container {
          width: 100%;
          padding-right: 0;
        }
        .left-container {
          width: 100%;
        }
        .title {
          width: 100%;
          font-size: 3rem;
          line-height: 1.1;
          text-align: left;
        }
        .summary {
          font-size: 1rem;
          margin: 1rem 0;
        }
        .postDate {
          font-size: 0.7rem;
          text-align: left;
          margin: 1rem 0;
        }
        .articleContainer {
          flex-direction: column;
          max-width: 95%;
          font-size: 1.1rem;
        }
        .articleBody {
          flex-direction: column;
        }
        .articleBody p {
          margin-bottom: 1rem;
          line-height: 1.5;
        }
        .left-container {
          height: auto;
          padding: 2rem 0;
        }
        .related-container {
          width: 95%;
          padding: 1rem 0;
        }
      }

      /* Small mobile devices */
      @media (max-width: 480px) {
        .title {
          font-size: 3rem;
          line-height: 1.2;
          padding: 1rem 0;
        }
        .summary {
          font-size: 0.9rem;
        }
        .postDate {
          font-size: 0.6rem;
        }
        .articleContainer {
          max-width: 100%;
          font-size: 1.3rem;
        }
        .articleBody {
          padding: 0 0.5rem;
        }
        .articleBody p {
          margin-bottom: 0.8rem;
          line-height: 1.4;
        }
        .left-container {
          padding: 1rem 0;
        }
        .related-container {
          width: 100%;
          padding: 0.5rem 0;
        }
      }
    </style>
  </body>
</html>
