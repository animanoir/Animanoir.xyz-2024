---
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import ModifiedHeader from "../components/ModifiedHeader.astro";
import { Picture } from "astro:assets";
type HeroImage = {
  src: string;
  width: number;
  height: number;
  format: "png" | "jpg" | "jpeg" | "tiff" | "webp" | "gif" | "svg" | "avif";
};

type Props = CollectionEntry<"works">["data"] & {
  heroImage: HeroImage;
};

const { title, description, heroImage } = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead
      title={`${title} by Ã“scar A. Montiel | Interactive Media Developer`}
      description={description}
      image={heroImage.src}
    />
  </head>
  <body>
    <ModifiedHeader />
    <article class="articleContainer">
      <div class="top-section">
        {
          heroImage && (
            <Picture
              src={heroImage}
              alt={description}
              class="heroImage"
              formats={["webp"]}
              decoding="async"
              loading="eager"
              quality={80}
            />
          )
        }
        <h1 class="title">{title}</h1>
      </div>
      <div class="articleBody">
        <slot />
      </div>
    </article>
    <style>
      body {
        margin: 0;
        overflow-x: hidden; /* Prevent horizontal scrolling */
      }

      .top-section {
        display: flex;
        position: relative;
        justify-content: center;
        align-items: center;
        margin-top: 5rem;
      }

      .heroImage {
        height: 500px;
        width: 50vw;
        object-fit: cover;
        padding-bottom: 3rem;
        filter: brightness(0.9);
        opacity: 0;
        transition: opacity 0.5s ease-in-out;
      }
      .heroImage.loaded {
        opacity: 1;
      }

      .title {
        width: 100%;
        margin: 0;
        font-size: 5rem;
        font-family: "Montserrat", sans-serif;
        line-height: 1;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        text-align: center;
        text-shadow:
          2px 2px 4px rgba(0, 0, 0, 0.8),
          -1px -1px 0 rgba(0, 0, 0, 0.4);
        color: #ffffff;
        z-index: 2;
      }

      .tools {
        display: block;
        text-align: center;
        font-family: "Open Sans", sans-serif;
        font-size: 0.7rem;
        color: #fdfefe7f;
        padding-bottom: 2rem;
        font-style: bold;
      }

      .articleContainer {
        padding-bottom: 40vh;
        margin: 0 auto;
        display: flex; /* Changed from position: flex (invalid property) */
        flex-direction: column; /* Changed to column for proper article flow */
        width: 100%; /* Full width container */
      }

      .articleBody {
        font-family: "Open Sans", sans-serif;
        color: #fdfefe;
        font-size: 1.1rem;
        width: 65%; /* Thinner than hero image */
        max-width: 900px; /* Add maximum width for very large screens */
        margin: 0 auto;
      }

      .articleContainer h1 {
        font-size: 4rem;
        width: 50%;
      }

      hr {
        border-top: 1px solid #ddd;
        margin: 1rem 0;
      }

      @media (max-width: 1920px) {
        .articleContainer {
          width: 60%;
          max-width: 1200px;
        }
      }

      @media (max-width: 768px) {
        .title {
          font-size: 2.5rem;
        }
        .articleContainer {
          width: 100%;
        }
        .articleBody {
          padding: 0 1rem;
        }
      }

      @media (max-width: 480px) {
        .title {
          font-size: 2rem;
          text-align: center;
        }
        .articleContainer {
          width: 100%;
          padding-top: 10vh;
          padding-bottom: 20vh;
        }
        .articleBody {
          padding: 0 0.5rem;
        }
        .heroImage {
          height: 300px;
        }
      }
    </style>
  </body>
</html>
