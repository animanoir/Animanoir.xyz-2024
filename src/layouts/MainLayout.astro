---
import BaseHead from "@/components/BaseHead.astro";
import Header from "@/components/Header.astro";
import { SITE_TITLE, SITE_SUBTITLE } from "@/consts";
import SceneIndex from "@/components/3DIndex/SceneIndex.jsx";
import Navbar from "@/components/Navbar.astro";
import Footer from "@/components/Footer.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead
      title={SITE_TITLE}
      description={SITE_SUBTITLE}
      image="/animanoir-oscar-a-montiel-tw.jpg"
    />
  </head>
  <body>
    <SceneIndex client:load />
    <div id="mainFrame">
      <Header title={SITE_TITLE} />
      <Navbar />
      <Footer />
    </div>
  </body>
</html>
